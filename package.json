{
  "name": "olliebot",
  "version": "0.1.0",
  "description": "Personal support agent with continuous monitoring and multi-channel communication",
  "type": "module",
  "workspaces": [
    "web",
    "tui"
  ],
  "scripts": {
    "dev": "concurrently -n server,web -c blue,green \"pnpm run dev:server\" \"pnpm run dev:web\"",
    "dev:server": "nodemon --watch src --watch .env -e ts,json --exec \"tsx --inspect src/index.ts\"",
    "dev:server-proxy": "cross-env HTTP_PROXY=http://127.0.0.1:8888 HTTPS_PROXY=http://127.0.0.1:8888 NODE_TLS_REJECT_UNAUTHORIZED=0 nodemon --watch src --watch .env -e ts,json --exec \"tsx --inspect src/index.ts\"",
    "dev:console": "tsx src/index.ts console",
    "dev:web": "pnpm --filter olliebot-web dev",
    "dev:tui": "pnpm --filter olliebot-tui dev",
    "build": "pnpm run build:server && pnpm run build:web && pnpm run build:tui",
    "build:server": "tsc",
    "build:web": "pnpm --filter olliebot-web build",
    "build:tui": "pnpm --filter olliebot-tui build",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "migrate:json-to-sqlite": "tsx src/db/migrate-from-json.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:api": "vitest run --config api-tests/vitest.config.ts",
    "test:api:coverage": "vitest run --config api-tests/vitest.config.ts --coverage",
    "eval": "npx -y promptfoo eval",
    "eval:view": "npx -y promptfoo view"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@atjsh/llmlingua-2": "^2.0.3",
    "@hono/node-server": "^1.19.9",
    "@hono/node-ws": "^1.3.0",
    "@huggingface/transformers": "^3.8.1",
    "@inquirer/prompts": "^7.0.0",
    "@lancedb/lancedb": "^0.8.0",
    "@pydantic/monty": "^0.0.4",
    "@tensorflow/tfjs": "^4.22.0",
    "async-mutex": "^0.5.0",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^4.0.1",
    "cron-parser": "^5.5.0",
    "dotenv": "^16.4.5",
    "hono": "^4.11.9",
    "html-to-text": "^9.0.5",
    "js-tiktoken": "^1.0.21",
    "pngjs": "^7.0.0",
    "prismjs": "^1.30.0",
    "pyodide": "^0.29.3",
    "react-markdown": "^9.0.3",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "sharp": "^0.34.5",
    "simple-git": "^3.27.0",
    "unpdf": "^0.12.0",
    "uuid": "^10.0.0",
    "vnc-rfb-client": "^0.2.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^22.7.4",
    "@types/pngjs": "^6.0.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0",
    "playwright": "^1.58.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^4.0.18"
  }
}
